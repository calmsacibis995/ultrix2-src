#! /bin/csh -f
#
# Make SPMS Software Project Management System
#

cd ..
setenv PROJECT $cwd

#install libraries
foreach p (libhash libpdb libslist libspms libtree)
	cd $PROJECT/src/lib/$p/src
	sed -e '/###/,$d' < Makefile > $$Mf
	mv $$Mf Makefile
	make install
end

exit(0)
#make programs
cd $PROJECT/src/bin
foreach p (*)
	cd $PROJECT/src/bin/$p
	sed -e '/###/,$d' < Makefile > $$Mf
	mv $$Mf Makefile
	make
end

exit(0)
